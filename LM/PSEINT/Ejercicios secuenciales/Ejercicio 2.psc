
Proceso Ejercicio_2
	
	Definir base,altura,perimetro,area Como Real;
	
	Escribir "Base:";
	
	Leer base;
	
	Escribir "Altura:";
	
	Leer altura;
	
	perimetro <- (base * 2) + (altura * 2);
	
	area <- base * altura;
	
	Escribir "El perímetro del rectángulo es: ", perimetro," cm.";
	
	Escribir "Su área es: ", area, " cm^2.";
	
FinProceso
